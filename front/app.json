{
  "expo": {
    "name": "VarlikYonetim",
    "slug": "varlik-yonetim",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/icon.png",
    "userInterfaceStyle": "light",
    "newArchEnabled": true,
    "splash": {
      "image": "./assets/splash-icon.png",
      "resizeMode": "contain",
      "backgroundColor": "#ffffff"
    },
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.varlikyonetim.app" 
    },
    "android": {
      "package": "com.varlikyonetim.app",
      "adaptiveIcon": {
        "foregroundImage": "./assets/adaptive-icon.png",
        "backgroundColor": "#ffffff"
      }
    },
    "web": {
      "favicon": "./assets/favicon.png",
      "bundler": "webpack" 
    },
    "extra": {
      "apiBaseUrl": "http://${process.env.HOST}:${process.env.PORT}"
    }
  }
}
